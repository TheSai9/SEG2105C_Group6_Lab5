<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/profileTitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="64dp"
        android:layout_marginBottom="24dp"
        android:text="Choose an Avatar"
        android:textSize="24sp" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="*">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp">

            <ImageView
                android:id="@+id/flag_ca"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:onClick="onTeamIconSelected"
                android:tag="@drawable/flag_ca"
                app:srcCompat="@drawable/flag_ca" />

            <ImageView
                android:id="@+id/flag_eg"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:onClick="onTeamIconSelected"
                android:tag="@drawable/flag_eg"
                app:srcCompat="@drawable/flag_eg" />

            <ImageView
                android:id="@+id/flag_fr"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:onClick="onTeamIconSelected"
                android:tag="@drawable/flag_fr"
                app:srcCompat="@drawable/flag_fr" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp">

            <ImageView
                android:id="@+id/flag_jp"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:onClick="onTeamIconSelected"
                android:tag="@drawable/flag_jp"
                app:srcCompat="@drawable/flag_jp" />

            <ImageView
                android:id="@+id/flag_kr"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:onClick="onTeamIconSelected"
                android:tag="@drawable/flag_kr"
                app:srcCompat="@drawable/flag_kr" />

            <ImageView
                android:id="@+id/flag_sp"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:onClick="onTeamIconSelected"
                android:tag="@drawable/flag_sp"
                app:srcCompat="@drawable/flag_sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/flag_tr"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:onClick="onTeamIconSelected"
                android:tag="@drawable/flag_tr"
                app:srcCompat="@drawable/flag_tr" />

            <ImageView
                android:id="@+id/flag_uk"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:onClick="onTeamIconSelected"
                android:tag="@drawable/flag_uk"
                app:srcCompat="@drawable/flag_uk" />

            <ImageView
                android:id="@+id/flag_us"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:onClick="onTeamIconSelected"
                android:tag="@drawable/flag_us"
                app:srcCompat="@drawable/flag_us" />
        </TableRow>
    </TableLayout>

</LinearLayout>